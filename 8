// Verificar PalÃ­ndromo:

let palavra = prompt("Digite uma palavra:");

function  revert(palavra) {
    let rev = "";
    let min = palavra.toLowerCase();
    let espaco = min.replace(/ /g,"");
    let pali = min.split("").reverse().join("");
  for (let i = pali.length-1; i >= 0; i--) {
    rev += pali[i];
  }
 console.log(rev.split(''));
 if(rev === pali){
     return true
 }else {
     return false
 }
}
console.log(revert(palavra));
